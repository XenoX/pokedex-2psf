{% extends 'base.html.twig' %}

{% block title %}Liste des pokemons - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Liste des pokemons</h1> <a class="btn btn-primary" href="{{ path('app_pokemon_create') }}">Ajouter</a>
    <hr>
    <div class="row">
        {% for pokemon in pokemons %}
            <div class="col-3 mb-4">
                <div class="card">
                    <img src="{{ pokemon.image }}" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ pokemon.name|capitalize }}</h5>
                        <p class="card-text">
                            <b>Num√©ro</b> : {{ pokemon.number }}<br>
                            <b>Type(s)</b> :
                            {% for type in pokemon.types %}
                                {{ type.name }}{{ not loop.last ? ', ' }}
                            {% endfor %}
                            <br><br>
                        </p>
                        <a class="btn btn-primary" href="{{ path('app_pokemon_show', {'id': pokemon.id}) }}">
                            Voir
                        </a>
                        <a class="btn btn-danger" href="{{ path('app_pokemon_delete', {'id': pokemon.id}) }}">
                            Supprimer
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
